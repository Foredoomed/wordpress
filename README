--------------------------
------1.functions.php-----
--------------------------
/**
 * Prevent wp from decoding.
 */
remove_filter('the_content', 'wptexturize'); 

/**
 * Get our wp_nav_menu() fallback, wp_page_menu(), to show a home link.
 */
function my_page_menu_args( $args ) {
	    $args['show_home'] = true;
	    return $args;
}
add_filter( 'wp_page_menu_args', 'my_page_menu_args' );

